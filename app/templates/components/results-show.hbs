{{#if legislatorsBoolean}}
  <div class="legislatorsDiv">
    {{#each model as |legislators|}}
      <div>
        {{legislators.first_name}} {{legislators.last_name}}
        <br>
        <p>{{legislators.phone_number}}</p>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if committeesBoolean}}
  <div class="committeesDiv">

  </div>
{{/if}}

{{#if billsBoolean}}
  <div class="billsDiv">
    <select>
      <option value="" {{action 'showAllBills'}}></option>
      <option value="" {{action 'showHouseBills'}}></option>
      <option value="" {{action 'showSenateBills'}}></option>
    </select>
  </div>
{{/if}}

</div>
